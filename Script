

function howOld(age,year){
  const birth=2020-age;
if(year>2020){return `You will be ${year-birth} in the year ${year}`}
else if(birth>year){return `The year ${year} was ${birth-year} years before you were born`}
else {return `You were ${year-birth} in the year ${year}`}
}
console.log(howOld(25,1996))
